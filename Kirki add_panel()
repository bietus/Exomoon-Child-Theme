// Create a new Kirki-Configuration
Kirki::add_config( 'exomoon_config', array(
        'capability'    => 'edit_theme_options',
        'option_type'   => 'theme_mod',
    ) );
    
// exomoon Panel
Kirki::add_panel( 'exomoon_panel', array(
    'title'       => esc_attr__( 'Exomoon Theme Settings', 'exomoon' ),
    'description' => esc_attr__( 'Configure your exomoon theme extensions', 'exomoon' ),
    'priority'    => 1, )
);
